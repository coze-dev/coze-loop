    },
    {
      "path": "../components/tsconfig.build.json"
    },
    {
      "path": "../env/tsconfig.build.json"
    },
    {
      "path": "../guard/tsconfig.build.json"
    },
    {
      "path": "../i18n/tsconfig.build.json"
    },
    {
      "path": "../tea/tsconfig.build.json"
    },
    {
      "path": "../toolkit/tsconfig.build.json"

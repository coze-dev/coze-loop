{
  "extends": "@coze-arch/ts-config/tsconfig.web.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./lib-ts",
    "rootDir": "./src",
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./lib-ts/tsconfig.build.tsbuildinfo"
  },
  "include": ["./src", "./src/**/*.json"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../../../config/eslint-config/tsconfig.build.json"
    },
    {
      "path": "../../../config/stylelint-config/tsconfig.build.json"
    },
    {
      "path": "../../../config/ts-config/tsconfig.build.json"
    },
    {
      "path": "../../../config/vitest-config/tsconfig.build.json"
    },
    {
      "path": "../../loop-base/bot-typings/tsconfig.build.json"
    },
    {
      "path": "../../loop-base/i18n/tsconfig.build.json"
    },
    {
      "path": "../../loop-base/toolkit/tsconfig.build.json"
    },
    {
      "path": "../../loop-components/biz-hooks/tsconfig.build.json"
    },
    {
      "path": "../../loop-components/evaluate-components/tsconfig.build.json"
    },
    {
      "path": "../../loop-modules/evaluate/tsconfig.build.json"
    }
  ]
}
